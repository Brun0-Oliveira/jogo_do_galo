#:kivy 1.10.1

<MetaGame>:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.1
        Label:
            text: "player: %s" % game.player_wins
        Label:
            text: "mob: %s" % game.mob_wins
        Button:
            text: "New Game"
            on_press: game.new_game()
    Game:
        id: game